<xs: schema xmlns: xs="http://www.w3.org/2001/XMLSchema">
    <xs: element name="ropa"
        <xs: complexType>
            <xs: sequence>
                <xs: element name="camisas">
                    <xs: complexType>
                        <xs: sequence>
                            <xs: element name="camisa" maxOccurs="unbounded">
                                <xs: complexType>
                                    <xs: sequence>
                                        <xs: element name="tipo" type="xs:string"/>
                                        <xs: element name="color" type="xs:string"/>
                                    </xs: sequence>
                                </xs: complexType>
                            </xs: element>
                        </xs: sequence>
                    </xs: complexType>
                </xs: element>
            </xs: sequence>
        </xs: complexType>
    </xs: element>
</xs: schema>







<ropa>
    <camisas>
        <camisa>
            <tipo> manga corta </tipo>
            <color> azul </color>
        </camisa>
        <camisa>
            <tipo> manga larga </tipo>
            <color> blanca </color>
        </camisa>
    </camisas>
</ropa>